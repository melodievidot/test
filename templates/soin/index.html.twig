{% extends 'base.html.twig' %}

{% block title %}Liste Soin {% endblock %}

{% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link rel="stylesheet" href="{{ asset("css/nuage.css") }}">
{% endblock %}

{% block body %}
     <h1 class="my-5 text-center">Liste Soin</h1>


    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for soin in soins %}
            <tr>
                <td>{{ soin.id }}</td>
                <td>{{ soin.Titre }}</td>
                <td>{{ soin.prix }}</td>
                <td>
                    <a href="{{ path('soin_show', {'id': soin.id}) }}">show</a>
                    <a href="{{ path('soin_edit', {'id': soin.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('soin_new') }}">Create new</a>
{% endblock %}
