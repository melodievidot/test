{% extends "base.html.twig" %}

{% block title %}Prestations
{% endblock %}

{% block body %}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-10 mx-auto col-12 text-center mb-3">
            <h1 class="mt-0 text-dark">{{categorie.titre}} </h1>
<div class="col-12 mt-4">
<h3 class="text-center">Prestations :</h3>
            <hr class="accent my-5">
        </div>
		
		{% for soin in soins %}
        <div class="card-columns">
            <div class="card card-body">
			<h6 class="text-truncate">{{soin.titre}}</h6>
                <span class="float-right font-weight-bold">{{soin.prix}} €</span>
				<div>
			<a href="{{path('add_soin_panier', {'id': soin.id})}}"class="btn btn-primary">Réserver</a> 
				</div>
			</div>
        </div>

		{% endfor %}
	{% endblock %}


